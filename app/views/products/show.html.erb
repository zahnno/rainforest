<p class = 'showpage'>Name: <%= @product.name %><br>
Description: <%= @product.description %><br>
Price: <%= @product.formatted_price %><br>
<img src="<%= @product.image %>" class = "photo"></p>
<div class = "showpage">
<h3>Reviews</h3>

  <p>Reviews for <%= @product.name %></p>

  <% @product.reviews.order("updated_at DESC").each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> by <%= review.user.name %></em>
        Added on: <%= review.created_at %>
        <% end %>
        <% if review.user == current_user %>
      <%= link_to "Delete Review", product_review_path(@product, review), method: :delete %>
      <% end %>
    </p>
  <% end %>

  <% if current_user %>
  <h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% else %>
  <p>Please <%= link_to "log in", new_session_path %> to add a review.</p> 
<% end %>
</div>
<p><%= link_to "Delete Product", @photo, method: :delete, data:
{confirm: "Are you sure you want to delete?"} %>
</p>
<p> <%= link_to "Back to Products", products_path %> </p>