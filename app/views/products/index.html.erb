
<p class = "new">
<a href="/products/new">Create New Product</a></p>
<% @products.order("price_in_cents ASC").each do |a| %>
<table class = "tablestyle">
<tr>
<th style = "width: 200px; height: 150px;"><img src= "<%= a.image %>" style= "width: 150px; height: 150px;"></th>
<th style = "width: 200px; height: 150px; font-size: 25px;"><%=link_to "#{a.name}" , product_path(a) %></th>
<th style = "width: 200px; height: 150px;"><%= a.description %><th>
<th style = "width: 200px; height: 150px;"><%= a.formatted_price %>$</th>
</tr>
</table>
<%end%>
